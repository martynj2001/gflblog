<%= form_with(model: post, local: true) do |form| %>

  <% render 'shared/error_messages' %>

  <div class="field">
    <%= form.collection_select(:category_id, Category.all, :id, :name, {prompt: "Choose a category"} ) %>
  </div>

  <div class="field">
    <%= form.label :title %>
    <%= form.text_field :title %>
  </div>

  <div class="field">
    <%= form.label :content %>
    <%= form.text_area :content %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
